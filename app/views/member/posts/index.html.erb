<div class="container">
  <% @posts.each do |post| %>
  <div class="row d-flex justify-content-center">

    <div class="col-md-8">
      <%= image_tag post.member.get_profile_image(50, 50) %>
      <%= post.member.name %>
    </div>
    <div class="col-md-2"><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-10"><%= post.title %></div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-10"><%= post.body %></div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-2">いいね数</div>
    <div class="col-md-2">コメント数</div>
    <div class="col-md-6">ステータス</div>
  </div>
  <% end %>
</div>
