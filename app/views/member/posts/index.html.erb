<div class="container mt-3">

  <% unless @category.posts.present? %>
    <div class ="d-flex justify-content-center mt-5 pt-3" >
      <%= image_tag "no_post.png",class: "no_image",width: "500",height: "auto" %>
    </div>
  <% else %>
    <div>「<%= @category.name %>」の投稿一覧</div>
    <!--検索バー-->
    <%= render "searches/search-form" %>
      <% if @category.genres.present? %>
        <%= form_with url: search_path, method: :get do |f| %>
          <div class="form-group row">
            <div class="col-sm-4 my-1">
              <%= f.collection_select :genre_id, @genres, :id, :name ,{}, {class: "form-control"} %>
              <%= f.hidden_field :category_id, :value => @category.id %>
            </div>
            <div class="col-sm-4 my-1">
              <%= f.submit "ジャンル別検索", class: "btn btn-block btn-secondary" %>
            </div>
          </div>
        <% end %>
      <% end %>
      <% unless @posts.exists? %>
        <div class ="d-flex justify-content-center mt-5 pt-3" >
          <%= image_tag "no_search.png",class: "no_image",width: "500",height: "auto" %>
        </div>
      <% else %>
        <% @posts.each do |post| %>
          <% if current_member.gender == post.member.gender %>
            <div class="bg-info mb-2">
              <%= link_to post_path(post.id) do %>
                <div class="d-flex justify-content-center mt-3 px-2 py-2 bg-info text-white">
                  <div class="col-md-8">
                    <%= image_tag post.member.get_profile_image(50, 50),class: "mr-3" %>
                    <%= post.member.name %>
                  </div>
                  <div class="col-md-2">
                    <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
                  </div>
                </div>

                <div class="d-flex justify-content-center text-white">
                  <div class="col-md-10">
                    <%= post.title %>
                  </div>
                </div>

                <div class="d-flex justify-content-center text-white">
                  <div class="col-md-10">
                    <%= post.body %>
                  </div>
                </div>
              <% end %>

              <div class="d-flex justify-content-center text-white">
                <div class="col-md-4">
                  <span id="empathy_counts<%= post.id %>" >
                    <!--いいね機能テンプレート-->
                    <%= render "member/empathies/empathy_link", post: post, empathies: @empathies %>
                  </span>
                    <i class="fas fa-comment text-white  ml-3"></i>
                    <span class = "text-secondary">
                      <%= post.comments.count %>
                    </span>
                </div>

                <div class="col-md-6 text-right">
                  <%= post.closed_check %>
                </div>
              </div>

            </div>
          <% end %>
        <% end %>

      <% end %>

    <% end %>
</div>