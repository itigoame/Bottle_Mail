<!--コメント一覧-->
<span class = "comment-all" >
  <div class="container mb-4", style="pading-bottom:50px;">
    <% comments.each do |comment| %>
      <div class="d-flex flex-wrap mt-3 ml-5 shadow">
        <div class="col-md-9">

          <% if admin_signed_in? %>
            <%= link_to admin_member_path(comment.member.id ),  class: "text-body" do %>
              <%= image_tag comment.member.get_profile_image(30,30) %>
              <%= comment.member.name %>
            <% end %>
          <% elsif member_signed_in? %>
            <%= link_to member_path(comment.member.id ),        class: "text-body" do %>
              <%= image_tag comment.member.get_profile_image(30,30) %>
              <%= comment.member.name %>
            <% end %>
          <% end %>

          <% if admin_signed_in? %>
            <%= link_to admin_post_comment_path(post.id,comment.id),method: :delete,         class: "btn", data: {confirm: "コメントを削除しますか？"} do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          <% elsif comment.member_id == current_member.id %>
            <%= link_to post_comment_path(post.id,comment.id),method: :delete, remote: true, class: "btn", data: {confirm: "コメントを削除しますか？"} do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
          <% end %>

        </div>

        <div class="col-md-9 text-break">
          <%= simple_format(comment.body) %>
        </div>

      </div>
    <% end %>
  </div>

  <!--コメント投稿欄-->
  <% if member_signed_in? %>
    <div class="container form-design">
      <% if post.is_closed == false %>
        <%= form_with model: comment,url: post_comments_path(post.id),method: :post, local: false do |f| %>
          <div class="row justify-content-center fixed-bottom">
            <div class="col-md-8 form-group ml-sm-0 ml-xs-0 pr-0">
              <%= f.text_area :body, class: "form-control" %>
            </div>
            <div class="d-flex col-md-1 align-items-center">
              <%= f.submit "送信",   class: "btn btn-sm btn-outline-dark" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</span>