<!--adminはいいね数のみ表示-->
<% if admin_signed_in? %>
  <i class="fas fa-lightbulb text-warning"></i>
  <span class = "text-secondary">
    <%= post.empathies.size %>
  </span>
<% elsif current_member.empathies.exists?(post_id: post.id) %>
<!--いいねしてたらdelete-->
  <%= link_to post_empathies_path(post_id: post.id), class: 'text-decoration-none', method: :delete,remote: true do %>
    <i class="fas fa-lightbulb text-warning"></i>
    <span class = "text-secondary">
      <%= post.empathies.size %>
    </span>
  <% end %>
<% else %>
<!--いいねしてなかったらcreate-->
  <%= link_to post_empathies_path(post_id: post.id), class: 'text-decoration-none', method: :post,remote: true do %>
    <i class="far fa-lightbulb text-secondary"></i>
    <span class = "text-secondary">
      <%= post.empathies.size %>
    </span>
  <% end %>
<% end %>