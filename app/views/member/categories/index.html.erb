<div class ="cantainer">
  <div class ="row">

    <% @categories.each do |category| %>
      <div class    ="card col-md-3 offset-md-2 my-4 text-center bg-info">
        <div class  ="card-body py-5">
          <h3 class ="card-title">
            <%= link_to category.name, category_posts_path(category.id), class: "text-white" %>
          </h3>
        </div>
      </div>
    <% end %>

  </div>
</div>