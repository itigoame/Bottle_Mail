<div class="main-heignt">
  <div class="container h-100 d-flex flex-column align-items-center justify-content-center">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "member/shared/error_messages", resource: resource %>

      <div class="field mb-1">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true,class: "form-control" %>
      </div>

      <div class="field mb-1">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email",class: "form-control" %>
      </div>

      <div class="field mb-1">
        <%= f.radio_button :gender, :women %> <%= f.label :gender_women,Member.genders_i18n[:women] %><br />
        <%= f.radio_button :gender, :men %>   <%= f.label :gender_men,Member.genders_i18n[:men]%>  <br />
      </div>

      <div class="field mb-1">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
      </div>

      <div class="field mb-1">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up",class: "btn btn-sm btn-secondary mt-3" %>
      </div>
    <% end %>
    <span class = "mt-2">
    <%= render "member/shared/links" %>
    </span>
  </div>
</div>
