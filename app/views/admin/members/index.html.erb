<div class="container mt-3">
<!--<div class="row">-->
  <!--<div class="col-md-7 search_form">-->
    <%= form_with url: admin_search_path, method: :get, class: "" do |f| %>
        <div class="form-group row">
          <div class="col-sm-4 my-1">
            <%= f.text_field :word, class: "form-control" %>
          </div>
          <div class="col-sm-3 my-1">
            <%= f.select :range, options_for_select([['全て'],['男性'],['女性']], params[:range]), {}, {class: "form-control"} %>
          </div>
          <div class="col-sm-2 my-1">
            <%= f.submit "検索", class: "btn btn-secondary btn-block" %>
          </div>
        </div>
    <% end %>
  <!--</div>-->
<!--</div>-->

  <div class="row mt-4 p-2 border-bottom">
    <div class="col-md-5"><strong>name</strong></div>
    <div class="col-md-3"><strong>gender</strong></div>
    <div class="col-md-3"><strong>status</strong></div>
  </div>
  <% @members.each do |member| %>
    <% if member.is_active == false %>

      <div class="row p-2 text-info border-bottom">
        <div class="col-md-5"><%= link_to member.name,admin_member_path(member.id),class: "text-info text-break" %></div>
        <div class="col-md-3"><%= member.gender_i18n %></div>
        <div class="col-md-3"><%= member.status_display %></div>
      </div>

    <% else %>
      <div class="row p-2 border-bottom">
        <div class="col-md-5"><%= link_to member.name,admin_member_path(member.id),class: "text-body" %></div>
        <div class="col-md-3"><%= member.gender_i18n %></div>
        <div class="col-md-3"><%= member.status_display %></div>
      </div>


    <% end %>
  <% end %>

</div>