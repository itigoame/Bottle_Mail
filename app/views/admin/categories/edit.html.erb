<div class="container mt-3">
<%= flash[:edit_alret] %>
<h4>カテゴリー編集: <%= @category.name %></h4>


<%= form_with model: @category, url: admin_category_path(@category.id) do |f| %>
<table>
  <tr>
    <td>
      <%= f.label :name, "名前" %>
    </td>
    <td>
      <%= f.text_field :name %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.submit "編集",class: "btn btn-sm btn-secondary" %>
    </td>
  </tr>
</table>

<% end %>
</div>