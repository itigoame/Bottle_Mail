<%= flash[:edit_alret] %>
<h3>カテゴリー編集: <%= @category.name %></h3>


<%= form_with model: @category, url: admin_category_path(@category.id) do |f| %>
<table>
  <tr>
    <td>
      <%= f.label :name, "名前" %>
    </td>
    <td>
      <%= f.text_field :name %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.submit "編集" %>
    </td>
  </tr>
</table>

<% end %>