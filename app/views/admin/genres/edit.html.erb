<div class="container mt-3">
<%= flash[:edit_alret] %>
  <h4 class ="mb-3">カテゴリー: <%= @category.name %><br>
      ジャンル: <%= @genre.name %></h4>


  <%= form_with model: @genre, url: admin_category_genre_path(@genre.id) do |f| %>
<table>
  <tr>
    <td>
      <%= f.label :name, "名前" %>
    </td>
    <td>
      <%= f.text_field :name %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.submit "編集",class: "btn btn-sm btn-secondary mt-3" %>
    </td>
  </tr>
</table>

<% end %>
</div>